<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_collect_item">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="5dp"
        android:id="@+id/layout_collect"
        android:weightSum="1">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_collect_thumb"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/nopic"
            android:layout_weight="0.42"/>
        <TextView
            android:id="@+id/tv_collect_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/item_good_text"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁小丁丁"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_del_collect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>