<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/divide_explist_child"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/layout_category_child"
    >
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_category_child"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/nopic"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:background="#F4F4F4"
        />
    <TextView
        android:id="@+id/tv_category_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ebpay_dimen_20dp"
        android:layout_toRightOf="@id/niv_category_child"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:text="333"
        />
</RelativeLayout>